[alias]
   st = status
   co = checkout
   ci = commit -a
   br = branch
   lg = log -p
   ls = log --oneline
   graph = log --graph --oneline --decorate=short --branches='*'
   ra-up = "!f() { \
        git remote add upstream git@github.com:$1.git; \
      }; f"

[push]
   default = current

[color]
   ui = true

[color "branch"]
   current = yellow reverse
   local = yellow
   remote = green

[color "diff"]
   meta = yellow bold
   frag = magenta bold
   old = red bold
   new = green bold

[color "status"]
   added = yellow
   changed = green
   untracked = red
